{
  "name": "typescript-express-react-starter",
  "version": "1.0.0",
  "description":
    "A typescript express react boilerplate for building isomorphic javascript applications",
  "scripts": {
    "clean": "rimraf build",
    "prebuild": "npm run clean",
    "build": "webpack --config webpack/index.js",
    "postbuild": "webpack --config webpack/server.js",
    "predev": "npm run build",
    "dev": "nodemon build/server.js & npm run watch",
    "precommit": "lint-staged",
    "test": "jest --coverage",
    "watch": "npm run test -- -u --watch"
  },
  "keywords": ["typescript", "react", "express", "boilerplate", "starter"],
  "author": "whoisandy",
  "license": "MIT",
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/express": "^4.0.37",
    "@types/jest": "^21.1.4",
    "@types/morgan": "^1.7.33",
    "@types/node": "^8.0.46",
    "@types/react": "^16.0.18",
    "@types/react-dom": "^16.0.2",
    "@types/react-hot-loader": "^3.0.4",
    "@types/webpack": "^3.0.13",
    "@types/webpack-dev-middleware": "^1.9.3",
    "@types/webpack-env": "^1.13.2",
    "@types/webpack-hot-middleware": "^2.16.0",
    "awesome-typescript-loader": "^3.2.3",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "chalk": "^2.2.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^4.3.0",
    "nodemon": "^1.12.1",
    "prettier": "^1.7.4",
    "progress-bar-webpack-plugin": "^1.10.0",
    "react-hot-loader": "^3.1.1",
    "ts-jest": "^21.1.3",
    "tslib": "^1.8.0",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "tslint-react": "^3.2.0",
    "typescript": "^2.5.3",
    "webpack": "^3.8.1",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-externals-plugin": "^1.0.0",
    "webpack-hot-middleware": "^2.20.0",
    "webpack-manifest-plugin": "^1.3.2"
  },
  "dependencies": {
    "express": "^4.16.2",
    "morgan": "^1.9.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint -p tslint.json --fix",
      "prettier --parser typescript --write",
      "git add"
    ]
  }
}
